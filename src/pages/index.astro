---
import { Icon } from "astro-icon";
import { mainContent, links, socialLinks } from "../links";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>PrtmBio</title>
		<style>
			@import url("https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap");
			body {
				background-color: #0f172a;
				color: #fff;
				font-family: "Raleway", sans-serif;
				margin: 0;
				paadding: 0;
				box-sizing: border-box;
			}
			ul {
				list-style: none;
				padding: 0;
				margin: 0;
			}
		</style>
	</head>
	<body>
		<article
			class="mx-auto my-0 max-w-[700px] flex flex-col items-center min-h-[90vh] py-[10vh] px-[1rem]"
		>
			<div class="mb-[2rem] flex flex-col gap-4 items-center">
				<img
					class="rounded-[50%] object-cover h-[128px] w-[128px]"
					src={mainContent.imgSrc}
					alt=""
				/>

				<h1 class="text-2xl font-semibold">
					{mainContent.name}
				</h1>
				<p class="text-lg">{mainContent.tagline}</p>
				<ul class="flex gap-8">
					{
						socialLinks.map((link) => (
							<li class="duration-200 hover:scale-105 ">
								<a href={link.url}>
									<Icon
										class="h-[36px] w-[36px] flex items-center justify-center"
										name={link.icon}
									/>
								</a>
							</li>
						))
					}
				</ul>
			</div>
			<ul class="w-full mx-auto my-[1rem] flex flex-col items-center">
				{
					links.map((link) => (
						<li class="flex w-full items-center bg-[#ffff] text-[#212121] mb-[1rem] rounded-[3rem] cursor-pointer ease-in-out">
							<a
								class="bg-inherit py-[1rem] px-[3rem] w-full flex items-center justify-center transition ease-in-out duration-200 hover:scale-105 rounded-[3rem] "
								href={link.url}
							>
								{link.text}
							</a>
						</li>
					))
				}
			</ul>
		</article>
	</body>
</html>
